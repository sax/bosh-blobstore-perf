#!/usr/bin/env bash

TARGET=<%= link('webdav').instances.first.address %>

apt-get -y install siege

mkdir -p /data

pushd /data > /dev/null

  fallocate -l 500M thing.file
  curl -T thing.file http://${TARGET}/thing.file

  siege -c <%= p('downloader.concurrency') %> -b -r <%= p('downloader.per_thread') %> http://${TARGET}/thing.file

popd > /dev/null
